#!/bin/bash

. ~/.io/config/envar
STATIC_DIR="$HOME/.io/fonts"
FONTS=$(ls -A $STATIC_DIR)

# Log announce
echo "Start $SCRIPT Log" >> $LOG

# Copy fonts from .io/fonts to system folder
for f in ${FONTS[@]}
do
    printf "$f"': '"\n" >> $LOG
    sudo rm -v /usr/share/fonts/$f &>> $LOG
    sudo cp -v $STATIC_DIR/$f /usr/share/fonts/$f &>> $LOG
done

# Log denounce
echo "Stop $SCRIPT Log" >> $LOG
