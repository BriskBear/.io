#!/bin/bash

[[ $(which --version) ]]|| ( printf "${hiRed}dependency 'which' missing!${NC}\n"; return 1 )

order=(
  'nano'
  'nvim'
  'vim'
  'vi'
)

set_edit() {
  printf '%s\n' ${order[@]}|
   xargs -I % which % 1>> /tmp/editors 2> /dev/null
  export EDITOR=`head -n 1 /tmp/editors`
  rm /tmp/editors
}

[[ -z $EDITOR ]] \
  && set_edit \
  || echo -e "\033[0;92m$(echo $EDITOR|awk -F '/' '{print $NF}')\033[0m is already the editor!"
