#!/bin/bash

IN_FILE=$(echo "$1"|rev|cut -f1 -d '/'|rev)
RM="$IN_FILE.md"

touch $RM
printf "# $IN_FILE  \n" >> $RM
printf "### Usage:  \n\n" >> $RM
printf "### Description:  \n" >> $RM
cat "$1"|grep -v "\#!"|grep ^# |cut -f2 -d '#' >> $RM
printf "\n## __Code__  \n" >> $RM
printf "\`\`\`\n" >> $RM
cat "$1"|grep ^'#!' >> $RM
cat "$1"|grep -v ^'#' >> $RM
printf "\`\`\`\n" >> $RM

vi $RM
