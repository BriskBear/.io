#!/bin/bash

# Keys need declared before definition
declare -a queue
leaf=/tmp/io/queue

# Populate the package queue
source $leaf

# Query for each package in the queue
for p in ${queue[@]}
do
    sudo pacman -Q | grep --color=always $p
done

# Cleanup
rm -vf $leaf &>> /tmp/io/log/pacman.QUERY
unset queue
