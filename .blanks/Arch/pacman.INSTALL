#!/bin/bash

# Keys need declared before definition
declare -a queue

# Prep for logging, declare constants
leaf=/tmp/io/queue
LOG="/tmp/io/log/pacman_install"
keyLOG="/tmp/io/log/queue"
MSG=( \
    [start]="# pacman.INSTALL : " \
    [stop]="# " \
)

# Populate the apt queue
source $leaf

function with_cat() {
  if [[ $1 ]]
  then
      # Install all items in the queue
      sudo pacman -Syu --needed --noconfirm ${queue[@]} | tee -a $LOG|lolcat -a -d 1
#       for p in ${queue[@]}
#       do
#           (sudo pacman -Syu --needed --noconfirm $p | tee -a $LOG|lolcat -a -d 1) \
#            || (yay --needed --noconfirm $p | tee -a $LOG |lolcat -a)
#       done
  else
      # Install all items in the queue
      for p in ${queue[@]}
      do
          sudo pacman -Sy --needed --noconfirm $p | tee -a $LOG
      done
  fi
}

# Check for lolcat
case "$(lolcat?)" in
  lolcat)
    with_cat true
    ;;
  sadcat)
    # Install lolcat
    gem install lolcat
    with_cat true
    ;;
  deadcat)
    with_cat
    ;;
esac

# Log and Cleanup
printf ${MSG[start]}$(date)"\n" >> $keyLOG
cat $leaf >> $keyLOG && \
 rm -vf $leaf &>> $LOG
printf ${MSG[stop]}$(date)"\n" >> $keyLOG
unset queue
