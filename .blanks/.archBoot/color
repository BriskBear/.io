#!/bin/bash

Black='\033[0;30m'
Blue='\033[0;34m'
Rust='\033[0;33m'
Cyan='\033[0;36m'
Dark_Gray='\033[1;30m'
Green='\033[032;m'
Light_Blue='\033[1;34m'
Light_Cyan='\033[1;36m'
Light_Gray='\033[0;37m'
Light_Green='\033[1;32m'
Light_Purple='\033[1;35m'
Pink='\033[1;31m'
Purple='\033[0;35m'
Red='\033[0;31m'
White='\033[1;37m'
Yellow='\033[1;33m'
NC='\033[0m'

alias echo='echo -e'

function color {
#    case
#     
#    esac
    echo "${Yellow} USAGE:\n     'echo \${Red}${Red}Red Text${Yellow}\${NC}' ${NC}"
    echo "${Yellow}     Use \${NC} to change back to default or shell will stay that color!${NC}"
}

