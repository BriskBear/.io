#!/bin/bash

IN_FILE=$1
RM="usg/$IN_FILE.md"

[ -f $RM ] && echo $RM" exists, Append anyway in 3s" && sleep 3|| echo "New Readme.md"

echo "# __"$IN_FILE"__" >> $RM
echo "### Description:  " >> $RM
printf "\n\n\n" >> $RM
echo "## __Code__" >> $RM
echo "\`\`\`" >> $RM
cat $IN_FILE >> $RM
echo "\`\`\`" >> $RM

nano +4 $RM
